    "test:coverage:full": "vitest run --coverage --coverage.reporter=html --coverage.reporter=text --coverage.reportsDirectory=coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.41.0",
    "@astrojs/tailwind": "^6.0.2",
    "@google/generative-ai": "^0.1.3",
    "astro": "^5.12.3",
    "tailwindcss": "^3.0.24"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
