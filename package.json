{
  "name": "social-media-post-generator",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run test/unit",
    "test:functional": "vitest run test/functional",
    "test:real": "vitest run test/real --exclude=''",
    "test:all": "vitest run",
    "test:coverage": "vitest run --coverage",
