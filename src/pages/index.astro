---
import Layout from '../layouts/Layout.astro';
---

<Layout title="YouTube Content Generator">
    <main class="max-w-4xl mx-auto py-10 px-4">
        <h1 class="text-3xl font-bold text-center mb-8">YouTube Content Generator</h1>
        
        <div class="bg-white p-6 rounded-lg shadow-md">
            <form id="yt-form" class="space-y-6">
                <div>
                    <label for="transcript" class="block text-sm font-medium text-gray-700 mb-1">YouTube Transkript</label>
                    <textarea id="transcript" name="transcript" rows="10" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" placeholder="Füge dein YouTube Transkript hier ein..."></textarea>
                </div>
                
                <button type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    YouTube Content generieren
                </button>
            </form>
            
            <div id="loading" class="hidden mt-6 text-center">
                <div class="inline-block animate-spin rounded-full h-8 w-8 border-t-2 border-b-2 border-indigo-600"></div>
                <p class="mt-2 text-gray-600">Transkript wird analysiert und Content generiert...</p>
            </div>
            
            <div id="result" class="hidden mt-6 space-y-6">
                <div>
                    <h2 class="text-lg font-medium text-gray-900 mb-2">Korrigiertes Transkript</h2>
                    <div id="transcript-content" class="p-4 bg-gray-50 rounded-md border border-gray-200 max-h-[300px] overflow-y-auto"></div>
                    <div id="transcript-cleaned" class="mt-1 text-xs text-amber-600 hidden">Hinweis: Ein einzelnes Zeichen am Ende des Transkripts wurde automatisch entfernt.</div>
                </div>
                
                <div>
                    <h2 class="text-lg font-medium text-gray-900 mb-2">YouTube Titel</h2>
                    <div id="title-content" class="p-4 bg-gray-50 rounded-md border border-gray-200"></div>
                </div>
                
                <div>
                    <h2 class="text-lg font-medium text-gray-900 mb-2">YouTube Beschreibung</h2>
                    <div id="description-content" class="p-4 bg-gray-50 rounded-md border border-gray-200 whitespace-pre-line"></div>
                </div>
                
                <div class="flex justify-end space-x-4">
                    <button id="copy-transcript-btn" class="py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Transkript kopieren
                    </button>
                    <button id="copy-title-btn" class="py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Titel kopieren
                    </button>
                    <button id="copy-description-btn" class="py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Beschreibung kopieren
                    </button>
                </div>
            </div>
            
            <div id="error" class="hidden mt-6 p-4 bg-red-50 text-red-700 rounded-md border border-red-200">
                <p id="error-message"></p>
            </div>
        </div>
    </main>
</Layout>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('yt-form');
        const loading = document.getElementById('loading');
        const result = document.getElementById('result');
        const transcriptContent = document.getElementById('transcript-content');
        const titleContent = document.getElementById('title-content');
        const descriptionContent = document.getElementById('description-content');
        const errorDiv = document.getElementById('error');
        const errorMessage = document.getElementById('error-message');
        const copyTranscriptBtn = document.getElementById('copy-transcript-btn');
        const copyTitleBtn = document.getElementById('copy-title-btn');
        const copyDescriptionBtn = document.getElementById('copy-description-btn');
        
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(form);
            const requestData = Object.fromEntries(formData.entries());
            
            if (!requestData.transcript || requestData.transcript.trim().length < 50) {
                errorDiv.classList.remove('hidden');
                errorMessage.textContent = 'Bitte gib ein gültiges Transkript ein (mindestens 50 Zeichen).';
                return;
            }
            
            // Show loading state
            loading.classList.remove('hidden');
            result.classList.add('hidden');
            errorDiv.classList.add('hidden');
            
            try {
                const response = await fetch('/api/generate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(requestData),
                });
                
                if (!response.ok) {
                    throw new Error(`Error: ${response.statusText}`);
                }
                
                const data = await response.json();
                
                // Hide loading, show result
                loading.classList.add('hidden');
                result.classList.remove('hidden');
                
                // Display the generated content
                transcriptContent.textContent = data.transcript;
                titleContent.textContent = data.title;
                descriptionContent.textContent = data.description;
                
                // Zeige Hinweis an, wenn das Transkript bereinigt wurde
                const transcriptCleaned = document.getElementById('transcript-cleaned');
                if (data.transcriptCleaned && transcriptCleaned) {
                    transcriptCleaned.classList.remove('hidden');
                }
                
            } catch (error) {
                // Hide loading, show error
                loading.classList.add('hidden');
                errorDiv.classList.remove('hidden');
                errorMessage.textContent = error.message || 'Ein Fehler ist beim Generieren des Inhalts aufgetreten.';
                console.error('Fehler:', error);
            }
        });
        
        // Copy to clipboard functionality
        copyTranscriptBtn.addEventListener('click', () => copyToClipboard(transcriptContent, copyTranscriptBtn));
        copyTitleBtn.addEventListener('click', () => copyToClipboard(titleContent, copyTitleBtn));
        copyDescriptionBtn.addEventListener('click', () => copyToClipboard(descriptionContent, copyDescriptionBtn));
        
        function copyToClipboard(contentElement, buttonElement) {
            const content = contentElement.textContent;
            navigator.clipboard.writeText(content)
                .then(() => {
                    const originalText = buttonElement.textContent;
                    buttonElement.textContent = 'Kopiert!';
                    setTimeout(() => {
                        buttonElement.textContent = originalText;
                    }, 2000);
                })
                .catch(err => {
                    console.error('Text konnte nicht kopiert werden: ', err);
                });
        }
    });
</script>